<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.ni.screens.teacherProfileScreen.TeacherProfileFragment">

    <ImageView
        android:id="@+id/ivBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/ava"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBackBtn" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Md. Hasan"
        android:textColor="#090301"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfile" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0B0B0B"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvDesignation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_dummy"
        android:drawablePadding="4dp"
        android:gravity="start|center_vertical"
        android:text="Senior Lecturer"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vDivider" />


    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_dummy"
        android:drawablePadding="4dp"
        android:gravity="start|center_vertical"
        android:text="Hasan@metrouni.edu.bd"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vDivider" />


    <TextView
        android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_dummy"
        android:drawablePadding="4dp"
        android:elevation="32dp"
        android:text="017154876"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/tvDesignation"
        app:layout_constraintTop_toBottomOf="@id/tvDesignation" />


    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_dummy"
        android:drawablePadding="4dp"
        android:elevation="32dp"
        android:text="metrouni, boteshor, sylhet"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />


    <TextView
        android:id="@+id/tvBloodGrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_dummy"
        android:drawablePadding="4dp"
        android:elevation="32dp"
        android:text="A+"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/tvContact"
        app:layout_constraintTop_toBottomOf="@id/tvContact" />

</androidx.constraintlayout.widget.ConstraintLayout>